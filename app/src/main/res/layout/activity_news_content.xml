<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/newsContentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/Blue2"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/newsContentData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoLink="web|email"
        android:padding="@dimen/activity_horizontal_margin"
        android:scrollbars="vertical"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/newsContentPrevButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/news_content_selector"
            android:drawableLeft="@drawable/previous_item"
            android:text="@string/prev_news_button"
            android:textColor="@color/Black70" />

        <Button
            android:id="@+id/newsContentNextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/news_content_selector"
            android:drawableRight="@drawable/next_item"
            android:text="@string/next_news_button"
            android:textColor="@color/Black70" />
    </LinearLayout>

</LinearLayout>