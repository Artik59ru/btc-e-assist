<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray0" >

    <ExpandableListView
        android:id="@+id/standardFragmentExpList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/med_margin"
        android:layout_marginRight="@dimen/med_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:animationCache="false"
        android:background="#00000000"
        android:cacheColorHint="#00000000"
        android:childDivider="@color/Gray"
        android:divider="@color/Gray0"
        android:dividerHeight="@dimen/med_margin"
        android:scrollingCache="false"
        android:smoothScrollbar="true" >
    </ExpandableListView>

    <TextView
        android:id="@+id/standardFragmentExpNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/empty_list"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>