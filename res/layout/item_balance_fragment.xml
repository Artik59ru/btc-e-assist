<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/avg_margin"
    android:paddingTop="@dimen/avg_margin" >

    <TextView
        android:id="@+id/itemBalanceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemBalanceValue"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/high_margin"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/itemBalanceDots"
        style="@style/DotsStyle"
        android:layout_alignBottom="@+id/itemBalanceValue"
        android:layout_toLeftOf="@+id/itemBalanceValue"
        android:layout_toRightOf="@+id/itemBalanceName" />

    <TextView
        android:id="@+id/itemBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxLength="20"
        android:paddingRight="@dimen/high_margin"
        android:singleLine="true"
        android:textSize="20sp" />

</RelativeLayout>