<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Gray" >

    <TextView
        android:id="@+id/itemOrdersGroupPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:drawablePadding="@dimen/high_margin"
        android:singleLine="true"
        android:textSize="25sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/itemOrdersGroupCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:id="@+id/itemOrdersGroupNamesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_toLeftOf="@id/itemOrdersGroupCheckBox"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/itemOrdersGroupName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Black70"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/itemOrdersGroupName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Black70"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>