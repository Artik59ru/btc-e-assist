<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseCustomTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Widget.AppCompat.Light.ActionBar.Solid</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">@dimen/avg_margin</item>
        <item name="android:layout_margin">@dimen/med_margin</item>
        <item name="android:background">@drawable/home_selector</item>
    </style>

    <style name="DotsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/med_margin</item>
        <item name="android:src">@drawable/dots</item>
    </style>

    <style name="WidgetTextValueStyle">
        <item name="android:textColor">@color/DarkSlateBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WidgetTextTime">
        <item name="android:textColor">@color/DarkSlateBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WidgetTextNameStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>