<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/min_margin" >

    <TextView
        android:id="@+id/itemDepthPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_weight="1"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/Black70"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/itemDepthAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/Black70"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/itemDepthTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/high_margin"
        android:layout_weight="1"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/Black70"
        android:textSize="12sp" />

</LinearLayout>